<div class="container">
  <div class="jumbotron text-center bg-primary text-white">
    <h1 class="display-4" id="app-title">Cool Car <img src="/db/public/assets/img/rx7.jpg"></h1>
    <p class="lead">Welcome to Cool Cars.</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         What car would you like to buy?
        </div>
        <!--Create/add car form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="car">Place order here:</label>
              <input type="text" class="form-control" id="carToGo" placeholder="">
            </div>
            <button class="btn btn-primary" type="submit">Place order</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
         Cars
        </div>
        <!--Div to hold cars that have not been devoured yet-->
        <div class="card-body">
              {{#each cars}}
                {{#unless devoured}}
                  {{> cars/car-block sell=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card devoured-card">
        <div class="card-header text-white" id="devoured-card-header">
         sell cars
        </div>
        <!--When a car has been devoured, put car here-->
        <div class="card-body">
          {{#each cars}}
              {{#if sell}}
                {{> cars/car-sell sell=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <!--Footer-->
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="card footer">
        <div class="card-body footer-body text-white">
          <h4 class="card-title text-white">Cool Car</h5>
          <br>
        </div>
      </div>
    </div>
</div>