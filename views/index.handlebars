<div class="jumbotron text-center">
  <h1>Car List!</h1>
  <img src="/assets/img/rx7.jpg" class="img" alt="Responsive image">

</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a new car</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Car Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="slee">Sell?</label><br>
          <input type="radio" name="sell" value="0" checked> Not sell<br>
          <input type="radio" name="sell" value="1"> sell!
        </div>
        <button type="submit">New Car</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Car list </h2>
      <ul>
        {{#each cars}}
        {{#unless sell}} 
       {{> cars/car-block sell=false}} 
        {{/unless}} 
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>cars sell!</h2>
      <ul>
        {{#each cars}}
        {{#if sell}} 
        <p>hi do you see me?</p>
        {{> cars/car-block sell=true}}
        {{/if}}
        {{/each}} 
      </ul>
    </div>
  </div>
</div>




